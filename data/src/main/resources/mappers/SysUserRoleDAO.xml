<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bytechaocai.fastweb.data.dao.system.SysUserRoleDAO">
  <resultMap id="BaseResultMap" type="com.bytechaocai.fastweb.data.entity.system.SysUserRoleEntity">
    <id property="urId" column="ur_id" jdbcType="VARCHAR"/>
    <result property="userId" column="user_id" jdbcType="VARCHAR"/>
    <result property="roleId" column="role_id" jdbcType="VARCHAR"/>
    <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
  </resultMap>

  <resultMap id="BaseVOMap" type="com.bytechaocai.fastweb.data.vo.system.SysUserRoleVO" extends="BaseResultMap"/>

  <!-- 基础列，带别名，使用时必须带别名 -->
  <sql id="BaseColumnList">
    t_sys_user_role.ur_id,
    t_sys_user_role.user_id,
    t_sys_user_role.role_id,
    t_sys_user_role.create_time,
  </sql>

  <!-- 批量插入 -->
  <insert id="batchInsert" parameterType="list">
    insert into sys_user_role
    values
    <foreach item="item" collection="list" separator=",">
      #{urId, jdbcType=VARCHAR}
      #{userId, jdbcType=VARCHAR}
      #{roleId, jdbcType=VARCHAR}
      #{createTime, jdbcType=TIMESTAMP}
    </foreach>
  </insert>

  <!-- 单表精确查询 -->
  <sql id="BaseWhere">
    <if test="urId != null and urId != ''">
      t_sys_user_role.ur_id = #{urId, jdbcType=VARCHAR}
    </if>
    <if test="userId != null and userId != ''">
      t_sys_user_role.user_id = #{userId, jdbcType=VARCHAR}
    </if>
    <if test="roleId != null and roleId != ''">
      t_sys_user_role.role_id = #{roleId, jdbcType=VARCHAR}
    </if>
    <if test="createTime != null and createTime != ''">
      t_sys_user_role.create_time = #{createTime, jdbcType=TIMESTAMP}
    </if>
  </sql>
</mapper>
